{% if design.icon.style and design.icon.style != 'none' %}
	{% set style = ' sx-icon-' ~ design.icon.style %}
{% endif %}

<div class="sx-icon-box{{ style }}">
	{% if content.content.icon is empty %}
		<span class="iconify" data-icon="{{ content.content.iconify|default('solar:crown-bold') }}"></span>
	{% endif %}
	{% if content.content.icon %}
		{{ content.content.icon.svgCode }}
	{% endif %}
</div>
